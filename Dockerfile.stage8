ARG TARGETPLATFORM
ARG FROMPLATFORM=${TARGETPLATFORM}
ARG FROMIMAGE
ARG TORCHVISION=v0.14.0
FROM --platform=${FROMPLATFORM} ${FROMIMAGE}

VOLUME [ "/out" ]

RUN \
  ls && \
  cd .. && \
  git clone -b ${TORCHVISION} https://github.com/pytorch/vision.git && \
  cd vision && \
  git submodule update --init --recursive && \
  ls && \
  ls -lah .. && \
  ls -lah ../.. && \
  find / | grep ".whl" && \
  ls -lah ../pytorch/dist/ && \
  pip install ../pytorch/dist/*.whl && \
  python setup.py build && \
  python setup.py bdist_wheel && \
  python setup.py install

ENTRYPOINT [ "/bin/bash", "cp", "--archive", "/src/torch", "/out" ]
